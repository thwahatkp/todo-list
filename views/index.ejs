
<%- include('header') %>
<body>
  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>
  <div class="box">

    <% newListItems.forEach(items => { %>
      <form action="/delete" method="post">
      <div class="item">
        <input name="checkbox" value='<%=items._id%>' onchange="this.form.submit()" type="checkbox">
        <input type="hidden" value="<%= listTitle %>" name="list">
        <p>
          <%= items.name %>
        </p>
      </div>
      </form>
   <% }); %> 



    <form action="/" method="post" class="item">
      <input type="text" name="item" placeholder="New Item" autofocus>
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
  </div>
<%- include('footer') %>
</body>
</html>
